@model CreatePlayerViewModel
@{
    ViewData["Title"] = "Player";
}

<div>
    <form asp-action="Player" asp-controller="Home" method="post">
        <div>
            <label>Name</label>
            <input type="text" asp-for="Name"/>
            <span asp-validation-for="Name"></span>
        </div>
        <div>
            <button type="submit">Отправить</button>
        </div>
    </form>
</div>